rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Function to check if user is admin
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // User Profiles:
    // - User can read/write their own profile
    // - Admin can read/write all profiles
    match /users/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
      
      // Allow access to linked members subcollection
      match /members/{memberId} {
         // Explicitly allow owner to create without invoking isAdmin (which might be causing issues)
         allow create: if request.auth != null && request.auth.uid == userId;
         // For other operations, allow owner OR admin
         allow read, update, delete: if request.auth != null && (request.auth.uid == userId || isAdmin());
      }
    }
    
    // Transactions:
    // - Admin can read/write all
    // - Member can read their own (resource.data.uid == auth.uid)
    // - Member can create their own (request.resource.data.uid == auth.uid)
    match /transactions/{transactionId} {
      allow read: if request.auth != null && (resource.data.uid == request.auth.uid || isAdmin());
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow update: if request.auth != null && (isAdmin() || resource.data.uid == request.auth.uid);
      allow delete: if request.auth != null && isAdmin();
    }

    // Financial Years:
    // - Admin can read/write
    // - Members can read (needed for dashboard or transparency)
    match /financial_years/{year} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && isAdmin();
    }
    
    // Default: Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
